@model AddGuestViewModel
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/adminLayout/Index.cshtml";
}

<form method="post">
    <label>Misafir Adı</label>
    <input type="text" asp-for="name" class="form-control" />
    <span asp-validation-for="name" class="text-danger"></span>
    <br />
    <label>Misafir Soyadı</label>
    <input type="text" asp-for="surname" class="form-control" />
    <span asp-validation-for="surname" class="text-danger"></span>
    <br />
    <label>Misafir Şehir</label>
    <input type="text" asp-for="city" class="form-control" />
    <span asp-validation-for="city" class="text-danger"></span>
    <br />
    <button class="btn btn-primary">Misafiri Ekle</button>
</form>

