@model List<ListWorkLocationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/adminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Lokasyon Adı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.workLocationID</td>
            <td>@item.workLocationName</td>
            <td>@item.workLocationCity</td>
            <td><a href="/WorkLocation/DeleteWorkLocation/@item.workLocationID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/WorkLocation/UpdateWorkLocation/@item.workLocationID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Lokasyon Girişi</a>

